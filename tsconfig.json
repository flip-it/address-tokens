{
    "compilerOptions": {
      "target": "ESNext",
      "allowJs": false,
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "declaration": true,
      "outDir": "dist/esm",
    },
    "include": ["./src"],
    "exclude": ["**/__tests__/**/*"]
  }
  